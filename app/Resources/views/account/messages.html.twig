{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        {% for message in messages %}
            <div class="well">
                <h3><span>{{ message.replyTo }}</span></h3>
                <p>{{ message.message }}</p>
                <p><a href="/contact/reply?email={{ message.replyTo }}">Reply</a></p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
